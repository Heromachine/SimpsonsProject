<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e1bc36"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="7dp">


            <ImageView
                android:id="@+id/iv_thumbnail_fav"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:scaleType="center"
                app:srcCompat="@mipmap/ic_launcher"
                tools:layout_editor_absoluteX="168dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/tv_character_fav"
                android:layout_width="216dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:padding="15dp"
                android:text="TextView"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_up_chevron"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:rotation="90"
                    app:srcCompat="@drawable/ic_chevron_up_green_24dp" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/iv_down_chevron"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_chevron_down_green_24dp"
                    android:rotation="90"/>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>