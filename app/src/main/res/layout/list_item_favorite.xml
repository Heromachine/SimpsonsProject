<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#B3E5FC"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"


            android:background="#B3E5FC"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="7dp">


            <ImageView
                android:id="@+id/iv_thumbnail_fav"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:background="#B3E5FC"
                android:scaleType="center"
                app:srcCompat="@mipmap/ic_launcher"
                tools:layout_editor_absoluteX="168dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/tv_character_fav"
                android:layout_width="216dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="#B3E5FC"
                android:gravity="center"
                android:padding="15dp"
                android:text="TextView"
                android:textColor="#212121"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B3E5FC"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_up_chevron"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#B3E5FC"
                    android:rotation="90"
                    app:srcCompat="@drawable/ic_chevron_up_green_24dp" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:background="#B3E5FC"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#212121"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_down_chevron"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#B3E5FC"
                    android:rotation="90"
                    app:srcCompat="@drawable/ic_chevron_down_green_24dp" />


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>